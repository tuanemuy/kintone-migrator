{
  "name": "kintone-migrator",
  "version": "0.0.0-development",
  "description": "CLI tool to manage kintone app schemas, seed data, JS/CSS customizations, and field permissions as code",
  "license": "MIT",
  "author": "Hikaru Otabe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuanemuy/kintone-migrator.git"
  },
  "keywords": [
    "kintone",
    "migration",
    "schema",
    "seed",
    "customize",
    "field-acl",
    "cli",
    "infrastructure-as-code"
  ],
  "type": "module",
  "bin": {
    "kintone-migrator": "dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "dev:diff": "tsx src/cli/index.ts schema diff",
    "dev:migrate": "tsx src/cli/index.ts schema migrate",
    "dev:override": "tsx src/cli/index.ts schema override",
    "dev:capture": "tsx src/cli/index.ts schema capture",
    "dev:dump": "tsx src/cli/index.ts schema dump",
    "dev:validate": "tsx src/cli/index.ts schema validate",
    "dev:seed": "tsx src/cli/index.ts seed apply",
    "dev:customize": "tsx src/cli/index.ts customize apply",
    "dev:field-acl": "tsx src/cli/index.ts field-acl apply",
    "dev:capture-field-acl": "tsx src/cli/index.ts field-acl capture",
    "build": "tsdown",
    "start": "node dist/index.mjs",
    "prepublishOnly": "pnpm build",
    "lint": "biome lint",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "typecheck": "tsgo",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@kintone/rest-api-client": "^6.1.1",
    "dotenv": "^17.3.1",
    "gunshi": "^0.28.0",
    "picocolors": "^1.1.1",
    "valibot": "^1.2.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260214.1",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv-cli": "^11.0.0",
    "semantic-release": "^25.0.3",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@^7.3.1",
    "vitest": "^4.0.18"
  }
}
